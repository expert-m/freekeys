	<div class="panel panel-default">
		<div class="panel-heading">
			{{ name }}
		</div>
		<!-- /.panel-heading -->
		<div class="panel-body">
{% endmacro %}

{% macro panel_end() %}
		</div>
	</div>
</div>
{% endmacro %}

{% macro list_begin() %}
<div class="list-group">
{% endmacro %}

{% macro list_end() %}
</div>
{% endmacro %}

{% macro hyperlink_list(value, href) %}
<a href="{{ href|default('#') }}" class="list-group-item">{{ value }}</a>
{% endmacro %}

{% macro hyperlink(value, href, type, size, block, disabled, list) %}
<a href="{{ href|default('#') }}" class="btn btn-{{ type|default('default') }} {% if size %}btn-{{ size }}{% endif %}	{% if block %}btn-block{% endif %} {% if disabled %}disabled{% endif %}">{{ value }}</a>
{% endmacro %}

{% macro table(thread, tbody, type) %}
<div class="table-responsive">
	<table class="table {% for item in type %}table-{{ item }}{% endfor %}">
		<thead>
			<tr>
			{% for item in thread %}						
				<th>{{ item[1] }}</th>						
			{% endfor %}
			</tr>
		</thead>
		<tbody>
		{% for item in tbody %}
			<tr>
				{% for item_head in thread %}
					<td>{{ item[item_head[0]] }}</td>
				{% endfor %}
			</tr>
		{% endfor %}
		</tbody>
	</table>
</div>
<!-- /.table-responsive -->
{% endmacro %}



