{% macro input(name, value, type, label, placeholder, help_text, pattern, required) %}
<div class="form-group">
	<label>{{ label }}</label>
	<input {% if type != 'file' %}class="form-control"{% endif %} name="{{ name }}" {% if value %}value="{{ value }}"{% endif %} type="{{ type|default('text') }}" {% if placeholder %}placeholder="{{ placeholder }}"{% endif %} {% if pattern %}pattern="{{ pattern }}"{% endif %} {% if required %}required{% endif %}>
	{% if help_text %}		
		<p class="help-block">{{ help_text }}</p>
	{% endif %}
</div>
{% endmacro %}

{% macro text(name, value, rows, label, placeholder, help_text) %}
<div class="form-group">
	<label>{{ label }}</label>
	<textarea class="form-control" name="{{ name }}" rows="{{ rows }}" placeholder="{{ placeholder }}">{{ value }}</textarea>
	{% if help_text %}		
		<p class="help-block">{{ help_text }}</p>
	{% endif %}
</div>
{% endmacro %}

{% macro select(name, value, label, help_text) %}
<div class="form-group">
	<label>{{ label }}</label>
	<select class="form-control" name="{{ name }}">
		{% for item in value %}
        	<option {{ item['tag'] }} value="{{ item['value'] }}">{{ item['text'] }}</option>
    	{% endfor %}
	</select>
	{% if help_text %}		
		<p class="help-block">{{ help_text }}</p>
	{% endif %}
</div>
{% endmacro %}

{% macro button(name, value, type, size, block, disabled) %}
<button name="{{ name }}" type="submit"
class="btn btn-{{ type|default('default') }} {% if size %}btn-{{ size }}{% endif %}	{% if block %}btn-block{% endif %} {% if disabled %}disabled{% endif %}"
>{{ value }}</button>
{% endmacro %}


