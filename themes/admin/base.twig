<!DOCTYPE html>
<html lang="en">

<head>
	{% block head %}
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="">

		<title>{% block title %}{% endblock %}</title>

		<!-- Bootstrap Core CSS -->
		<link href="{{ url_theme }}/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

		<!-- MetisMenu CSS -->
		<link href="{{ url_theme }}/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

		<!-- Custom CSS -->
		<link href="{{ url_theme }}/dist/css/sb-admin-2.css" rel="stylesheet">

		<!-- Custom Fonts -->
		<link href="{{ url_theme }}/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--{if lt IE 9}>
			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<!{endif}-->
	{% endblock %}
</head>

<body>
	{% block body %}   
		<div id="wrapper">
			<!-- Navigation -->
			<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="{{ url_base }}/admin.php">{{ project_name }} v{{ project_version }}</a>
				</div>
				<!-- /.navbar-header -->

				<ul class="nav navbar-top-links navbar-right">
					<li class="dropdown">
						<a href="{{ url_base }}/index.php?do=exit">
							<i class="fa fa-power-off fa-fw"></i>
						</a>
						<!-- /.dropdown-user -->
					</li>
					<!-- /.dropdown -->
				</ul>
				<!-- /.navbar-top-links -->

				<div class="navbar-default sidebar" role="navigation">
					<div class="sidebar-nav navbar-collapse">
						<ul class="nav" id="side-menu">
	                        <li>
	                            <a href="?do=config"><i class="fa fa-gear fa-fw"></i> {{ 'Configurations'|t }}</a>
	                        </li>
							<li>
								<a href="#"><i class="fa fa-th-large fa-fw"></i> {{ 'Items'|t }}<span class="fa arrow"></span></a>
								<ul class="nav nav-second-level">
									<li>
										<a href="?do=items&amp;action=add_item">{{ 'Add item'|t }}</a>
									</li>
									<li>
										<a href="?do=items&amp;action=list_items">{{ 'List of items'|t }}</a>
									</li>
								</ul>
								<!-- /.nav-second-level -->
							</li>
							<li>
								<a href="#"><i class="fa fa-folder fa-fw"></i> {{ 'Categories'|t }}<span class="fa arrow"></span></a>
								<ul class="nav nav-second-level">
									<li>
										<a href="?do=items&amp;action=add_category">{{ 'Add category'|t }}</a>
									</li>
									<li>
										<a href="?do=items&amp;action=list_categories">{{ 'List of categories'|t }}</a>
									</li>
								</ul>
								<!-- /.nav-second-level -->
							</li>
							<li>
								<a href="#"><i class="fa fa-key fa-fw"></i> {{ 'Keys'|t }}<span class="fa arrow"></span></a>
								<ul class="nav nav-second-level">
									<li>
										<a href="?do=items&amp;action=add_key">{{ 'Add key'|t }}</a>
									</li>
									<li>
										<a href="?do=items&amp;action=list_keys">{{ 'List of keys'|t }}</a>
									</li>
								</ul>
								<!-- /.nav-second-level -->
							</li>
							<li>
								<a href="#"><i class="fa fa-tasks fa-fw"></i> {{ 'Tasks'|t }}<span class="fa arrow"></span></a>
								<ul class="nav nav-second-level">
									<li>
										<a href="?do=items&amp;action=add_task">{{ 'Add task'|t }}</a>
									</li>
									<li>
										<a href="?do=items&amp;action=list_tasks">{{ 'List of tasks'|t }}</a>
									</li>
									<li>
										<a href="?do=items&amp;action=add_group_tasks">{{ 'Add a group of tasks'|t }}</a>
									</li>
									<li>
										<a href="?do=items&amp;action=list_group_tasks">{{ 'The list of groups of tasks'|t }}</a>
									</li>
								</ul>
								<!-- /.nav-second-level -->
							</li>
						</ul>
					</div>
					<!-- /.sidebar-collapse -->
				</div>
				<!-- /.navbar-static-side -->
			</nav>

			<!-- Page Content -->
			<div id="page-wrapper">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12">
							{% if notifications %}<br>{% endif %}
							{% for notification in notifications %}
								<div class="alert alert-{{ notification['type'] }} alert-dismissable">
									<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
									{{ notification['text'] }}
								</div>
							{% endfor %}
							<h1 class="page-header">{{ block('title') }}</h1>
						</div>
						<!-- /.col-lg-12 -->
					</div>
					<div class="row">
						{% block content %}{% endblock %}
					</div>
					<!-- /.row -->
				</div>
				<!-- /.container-fluid -->
			</div>
			<!-- /#page-wrapper -->

		</div>
		<!-- /#wrapper -->

		<!-- jQuery -->
		<script src="{{ url_theme }}/bower_components/jquery/dist/jquery.min.js"></script>

		<!-- Bootstrap Core JavaScript -->
		<script src="{{ url_theme }}/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

		<!-- Metis Menu Plugin JavaScript -->
		<script src="{{ url_theme }}/bower_components/metisMenu/dist/metisMenu.min.js"></script>

		<!-- Custom Theme JavaScript -->
		<script src="{{ url_theme }}/dist/js/sb-admin-2.js"></script>
	{% endblock %}
</body>

</html>
