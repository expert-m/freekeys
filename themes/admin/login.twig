{% extends 'base.twig' %}

{% block title %}{{ 'Sign In'|t }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'Please Sign In'|t }}</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="POST">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="{{ 'Username'|t }}" name="interface[auth][login][0][login]" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="{{ 'Password'|t }}" name="interface[auth][login][0][password]" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="interface[auth][login][0][remember]" type="checkbox" value="Remember Me">{{ 'Remember Me'|t }}
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" name="interface[auth][login][0][run]" class="btn btn-lg btn-success btn-block" value="{{ 'Sign In'|t }}">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="{{ url_theme }}/bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ url_theme }}/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="{{ url_theme }}/bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="{{ url_theme }}/dist/js/sb-admin-2.js"></script>
{% endblock %}