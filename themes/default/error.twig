{% if title == '' %}
	{% set title = 'Error' %}
{% endif %}
<!DOCTYPE html>
<html>
<head>
	<title>{{ title }}</title>
	<link href='http://fonts.googleapis.com/css?family=Ubuntu+Mono:400,700&amp;subset=latin,cyrillic' rel='stylesheet' type='text/css'>
	<style>
	body {
		font: 16px 'Ubuntu Mono';
		color: #F9FBE6;
		background: #08070C;
		text-transform: uppercase;
	}

	.block {
		width: 300px;
		height: 200px;
		position: absolute;
		left: 50%;
		top: 50%;
		margin: -100px 0 0 -150px;
		border: 3px solid #A1120C;
	}

	.title {		
		font-size: 24px;
		line-height: 44px;
		border-bottom: 3px solid #A1120C;
		padding-left: 10px;
		color: #A1120C;
	}

	.message {
		overflow: auto;
		padding: 10px;
		height: 133px;
	}
	</style>
</head>
<body>
	<div class="block">
		<div class="title">{{ title }}</div>
		<div class="message">
			{{ message }}

			{% if notifications %}
				<br><br>Notifications:
				{% for notification in notifications %}
					<br>{{ notification['text'] }}
				{% endfor %}
			{% endif %}

			{% if args %}
				<br><br>Arguments:
				{% for key, value in args %}
					<br>{{ key }} = {{ value }}
				{% endfor %}
			{% endif %}
		</div>
	</div>
</body>
</html>